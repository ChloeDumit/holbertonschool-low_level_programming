#include <stdio.h>
/**
 * _putchar - writes the character c to stdout
 * @c: The character to print
 *
 * Return: On success 1.
 * On error, -1 is returned, and errno is set appropriately.
 */
int _islower(int c)
{
  char r1;
  char r0;
  r1 = 1;
  r0 = 0;
if (_islower(c))
{
  _putchar (r1);
 }else {
  _putchar (r0);
}
 return (0);
}
