#include "holberton.h"
#include <stdio.h>
/**
 *_strncpy - copies a string
 *@dest: dest
 *@src: src
 *@n: n
 */
char *_strncpy(char *dest, char *src, int n)
{
  int l;
  for (l = 0; l != '\0'; l++)
    {
    }
  if(dest[l] >  n)
    {
      return (NULL);
    }
    while (src && n--)
	{
	  *dest = *src;
	  dest++;
	  src++;
	}
      *dest = '\0';

  return(dest);
}
